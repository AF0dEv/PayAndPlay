<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayAndPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PayAndPlay.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic&amp;display=swap">
    <link rel="stylesheet" href="lib/bootstrap/dist/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="lib/bootstrap/dist/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="lib/bootstrap/dist/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/aos.min.css">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/animate.min.css">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/baguetteBox.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="mainNav-1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PayAndPlay</a>
                <button type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarResponsive" aria-controls="navbarResponsive"
                        class="navbar-toggler navbar-toggler-right"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-align-justify"></i>
                </button>
                <div class="navbar-collapse collapse" id="navbarResponsive">
                    @{
                        if (Context.Session.GetString("UTILIZADOR") == "" || Context.Session.GetString("UTILIZADOR") == null)
                        {
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Registo" asp-action="Index">REGISTER</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">LOGIN</a>
                                </li>
                            </ul>
                        }
                        else if (Context.Session.GetString("UTILIZADOR") != "" && Context.Session.GetString("UTILIZADOR") != null && Context.Session.GetString("ADMIN") == "true" && Context.Session.GetString("PERFIL") == "3")
                        {
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="DJs" asp-action="Index">DJs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Utilizadores" asp-action="Index">Utilizadores</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Musicas" asp-action="Index">Musicas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="PlayLists" asp-action="Index">PlayLists</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="MusicasInPlayLists" asp-action="Index">Musicas In PlayLists</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Perfis" asp-action="Index">Perfis</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                                </li>
                                </ul>
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="LogOut" asp-action="Index">LogOut</a>
                                    </li>
                                </ul>
                        }
                        else if (Context.Session.GetString("UTILIZADOR") != "" && Context.Session.GetString("UTILIZADOR") != null && Context.Session.GetString("PERFIL") == "1" && Context.Session.GetString("ADMIN") == "false")
                        {
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PerfilUser" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PedidoUser" asp-action="Index">Fazer Pedido</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="LogOut" asp-action="Index">LogOut</a>
                                    </li>
                                </ul>
                        }
                        else if (Context.Session.GetString("UTILIZADOR") != "" && Context.Session.GetString("UTILIZADOR") != null && Context.Session.GetString("PERFIL") == "2" && Context.Session.GetString("ADMIN") == "false")
                        {
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PerfilDJ" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Musicas" asp-action="Index">Musicas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="DjPlayList" asp-action="Index">PlayLists</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="DjMusicasInPlayLists" asp-action="Index">Musicas In PlayList</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PedidoDj" asp-action="Index">Pedidos</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="QRCode" asp-action="CreateQRCode">QRCode</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="LogOut" asp-action="Index">LogOut</a>
                                    </li>
                                </ul>
                          }
                }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    <script src="/lib/bootstrap/dist/js/aos.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bs-init.js"></script>
    <script src="/lib/bootstrap/dist/js/baguetteBox.min.js"></script>
    <script src="/lib/bootstrap/dist/js/creative.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
