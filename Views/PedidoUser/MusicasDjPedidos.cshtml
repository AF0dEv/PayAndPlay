@model PayAndPlay.Models.MusicaInPlayList

@{
    ViewData["Title"] = "Musicas DJ";
}
<h1>Selecione Música</h1>
    @if (ViewBag.MUSICAS != null && ViewBag.PLAYLISTS != null)
{
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    PlayList
                </th>
                <th>
                    Música
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Musica item in ViewBag.MUSICAS)
            {
                <tr>
                    <td>
                        @ViewBag.PLAYLISTS.Nome
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <form>
                            <button type="submit" formmethod="post" asp-route-id="@item.ID">Selecionar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Este DJ não tem PlayLists Disponiveis</p>
}